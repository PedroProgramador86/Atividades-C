/******************************************************************************

2.	Faça	um	algoritmo	para	calcular	quantas	ferraduras	são	
necessárias	para	equipar	todos	os	
cavalos	comprados	para	um	haras.

*******************************************************************************/
#include <stdio.h>

int main()
{int cavalos, ferraduras;
    
    printf("Digite quatos cavalos ah no Haras: ");
    scanf("%d", &cavalos);
    
    ferraduras = cavalos * 4;
    
    printf("São necessárias de %d ferraduras para os %d cavalos", ferraduras, cavalos);

    return 0;
}
