/******************************************************************************

5.	Um	motorista	deseja	colocar	no	seu	tanque	X	reais	de	gasolina.	Escreva	um	algoritmo	para	
ler	o	preço	do	litro	da	gasolina	e	o	valor	do	pagamento,	e	exibir	quantos	litros	ele	conseguiu	
colocar	no	tanque.

 R$5,58
 
*******************************************************************************/
#include <stdio.h>

int main()
{float valor, gasol;
    
    printf("Posto de gasolina\n\n");
    
    printf("Digite o quanto deseja colocar de gasolina: R$");
    scanf("%f", &valor);
    
    gasol = valor / 5.58;
    
    printf("Você consegue reabastecer no seu tanque R$%.2f litros de gasolina", gasol);

    return 0;
}
